.main-screen
	header.header
		a(href='http://155.158.138.222:3000/')
			img.logo(src='assets/img/logo.svg')
		+menu('menu', ['projects', 'reviews', 'about', 'contact'], 0)
	.panels
		each item in projects
			.panel(style=`background-image: url(${item.backGround})` data-href='.panels')
				a.panel__link(href='#')
					.panel__content
						h3.project__name= item.projectName
						p.project__descr= item.shortDescr
						p.project__btn= item.buttonText
					.panel__content-open

.project-description-wrapper
	.project-description
		ul.projects-full
			each item in projects
				li.project__content
					.project-wrapper
						.project__description
							.company-info
								.company-name
									p= item.companyName
								.company-type
									p= item.companyType
							img.project__logo(src=`/assets/img/${item.companyLogo}` alt='company logo')
							.creative-process
								.textBlock.textBlock__first
									.textBlock-name
										p= item.firstTextBlockName
									.textBlock-descr
										h3.textBlock-header= item.firstTextBlockHeader
										p.textBlock-text=item.firstTextBlockText
								.imgBlock
									.imgBlock__small
										img(src=`/assets/img/${item.imgSmall}` alt='')
									.imgBlock__big
										img(src=`/assets/img/${item.imgBig}` alt='')
								.textBlock.textBlock__second
									.textBlock-name
										p= item.secondTextBlockName
									.textBlock-descr
										h3.textBlock-header= item.secondTextBlockHeader
										p.textBlock-text=item.secondTextBlockText
										.textBlock-read-more
											h3.textBlock-header= item.theerdTextBlockHeader
											p.textBlock-text=item.theerdTextBlockText1
											.read-more-wrapper
												p.textBlock-text=item.theerdTextBlockText2
												p.textBlock-text=item.theerdTextBlockText3
											a.btn.read-more Read the story
						.main-gallery-img
							img(src=`/assets/img/${item.mainGalleryImg}` alt='')
						.project__gallery
							.gallery__column.gallery__column-1
								.gallery__column-name= item.galleryName
								.galleryImageContainer
